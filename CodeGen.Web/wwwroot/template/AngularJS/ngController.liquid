app.controller('{{table.MapTableName}}Controller', ['$scope', '$http', function ($scope, $http) {
    $scope.vmModel = {};

    //******=========Get All=========******
    GetAll();
    function GetAll() {
        $http({
            method: 'GET',
            url: '/api/{{table.MapTableName}}/GetAll'
        }).then(function (response) {
           console.log(response.data);
        }, function (response) {
           console.log(response);
        });
    };

    //******=========Get Single=========******
    $scope.GetById = function (model) {
        $http({
            method: 'GET',
            url: '/api/{{table.MapTableName}}/GetById/'+ parseInt(model.id)
        }).then(function (response) {
           $scope.vmModel = response.data;
        }, function (error) {
           console.log(error);
        });
    };

    //******=========Save=========******
    $scope.Save = function () {
        $http({
            method: 'POST',
            url: '/api/{{table.MapTableName}}/Save',
            data: $scope.vmModel
        }).then(function (response) {
            $scope.reset();
            GetAll();
        }, function (error) {
            console.log(error);
        });
    };

    //******=========Update=========******
    $scope.Update = function () {
        $http({
            method: 'PUT',
            url: '/api/{{table.MapTableName}}/UpdateById/'+ parseInt(model.id),
            data: $scope.vmModel
        }).then(function (response) {
            $scope.reset();
            GetAll();
        }, function (error) {
            console.log(error);
        });
    };

    //******=========Delete=========******
    $scope.Delete = function (model) {
        var IsConf = confirm('You are about to delete data. Are you sure?');
        if (IsConf) {
            $http({
                method: 'DELETE',
                url: '/api/{{table.MapTableName}}/DeleteById/'+ parseInt(model.id),
            }).then(function (response) {
                $scope.reset();
                GetAll();
            }, function (error) {
                console.log(error);
            });
        }
    };

    //******=========Clear Form=========******
    $scope.Reset = function () {
        $scope.vmModel = {};
    };

}]);